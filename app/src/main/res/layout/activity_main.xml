<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <GridLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:columnCount="5"
        android:rowCount="6"
        android:useDefaultMargins="true">

        <EditText
            android:layout_marginBottom="20dp"
            android:id="@+id/et_result_id"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="fill_horizontal"
            android:gravity="center_horizontal|bottom"
            android:text="result" />


        <!--Первый ряд-->
        <Button
            style="@style/btn_calc_all"
            android:id="@+id/btn_one_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="0"
            android:contentDescription="1"
            android:text="1." />


        <Button
            style="@style/btn_calc_all"
            android:id="@+id/btn_two_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="1"
            android:contentDescription="2"
            android:text="2." />


        <Button
            style="@style/btn_calc_all"
            android:id="@+id/btn_three_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="2"
            android:contentDescription="3"
            android:text="3." />

        <Button
            style="@style/btn_calc_all"
            android:id="@+id/btn_four_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="3"
            android:contentDescription="4"
            android:text="4." />

        <!--Второй ряд-->

        <Button
            style="@style/btn_calc_all"
            android:id="@+id/btn_five_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="0"
            android:contentDescription="5"
            android:text="5." />


        <Button
            style="@style/btn_calc_all"
            android:id="@+id/btn_six_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="1"
            android:contentDescription="6"
            android:text="6." />


        <Button
            style="@style/btn_calc_all"
            android:id="@+id/btn_seven_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="2"
            android:contentDescription="7"
            android:text="7." />

        <Button
            style="@style/btn_calc_all"
            android:id="@+id/btn_eight_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="3"
            android:contentDescription="8"
            android:text="8." />

        <!--Третий ряд-->

        <Button
            style="@style/btn_calc_all"
            android:id="@+id/btn_nine_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="0"
            android:contentDescription="9"
            android:text="9." />


        <Button
            style="@style/btn_calc_all"
            android:id="@+id/btn_zero_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="1"
            android:contentDescription="0"
            android:text="0." />


        <Button
            style="@style/btn_calc_all"
            android:id="@+id/btn_dot_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="2"
            android:contentDescription="11"
            android:text="." />

        <Button
            style="@style/btn_calc_all"
            android:id="@+id/btn_comma_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="3"
            android:contentDescription="12"
            android:text="," />

        <!--Чертвертый ряд-->

        <Button
            style="@style/btn_calc_all"
            android:id="@+id/btn_sum_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="4"
            android:layout_column="0"
            android:contentDescription="13"
            android:text="+" />


        <Button
            style="@style/btn_calc_all"
            android:id="@+id/btn_sub_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="4"
            android:layout_column="1"
            android:contentDescription="14"
            android:text="-" />


        <Button
            style="@style/btn_calc_all"
            android:id="@+id/btn_multi_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="4"
            android:layout_column="2"
            android:contentDescription="15"
            android:text="*" />

        <Button
            style="@style/btn_calc_all"
            android:id="@+id/btn_dev_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="4"
            android:layout_column="3"
            android:contentDescription="16"
            android:text="/" />

        <!--Пятый ряд-->

        <Button
            style="@style/btn_calc_all"
            android:id="@+id/btn_cancel_id"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:contentDescription="17"
            android:text="C." />


        <Button
            style="@style/btn_calc_all"
            android:id="@+id/btn_equal_id"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:contentDescription="18"
            android:text="=." />


    </GridLayout>

</RelativeLayout>